<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrackerFragment"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Hydration Tracking Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/hydrationStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Water Consumed: 0 ml"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/add250mlButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add 250ml"/>

                <Button
                    android:id="@+id/add500mlButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add 500ml"/>

                <Button
                    android:id="@+id/add1000mlButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add 1000ml"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Step Counter Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/stepCounterStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Steps Taken: 0"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Sleep Tracking Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/sleepStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sleep Duration: 0 hours"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/addSleepButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Sleep Duration"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Nutrition Tracking Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/nutritionStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Calories Consumed: 0 kcal"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/addCaloriesButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Calories"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
